<%- include("partials/header") %>

  <div class="book-form">
    <h2>Edit Book</h2>
    <form method="POST" action="/edit/<%= book.id %>">
      <label>Title</label>
      <input name="title" value="<%= book.title %>" required />

      <label>Author</label>
      <input name="author" value="<%= book.author %>" />

      <label>Rating (1â€“5)</label>
      <input type="number" name="rating" min="1" max="5" value="<%= book.rating %>" />

      <label>Notes</label>
      <textarea name="notes"><%= book.notes %></textarea>

      <label>Date Read</label>
      <input name="date_read" value="<%= book.date_read %>" />

      <label>Cover URL</label>
      <input name="coverUrl" value="<%= book.coverUrl %>" />

      <button>Save Changes</button>
    </form>
  </div>

  <%- include("partials/footer") %>